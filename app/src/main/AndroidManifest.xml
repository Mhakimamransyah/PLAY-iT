<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.ac.unsri.ilkom.kelompok6students.cafetune">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/apklogo"
        android:label="PLAY iT"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".CustomDataActivity"
            android:label="@string/title_activity_custom_data"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".login"
            android:label="PLAY iT"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Progress_Bar" />
        <activity
            android:name=".GenreActivity"
            android:label="@string/title_activity_genre"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".QueueActivity"
            android:label="@string/title_activity_queue"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>